generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Event {
  id         String   @id @default(uuid())
  title      String
  start      DateTime
  end        DateTime
  resource   Resource @relation(fields: [resourceId], references: [id])
  resourceId String
}

model Resource {
  id      String   @id @default(uuid())
  name    String
  events  Event[]
  avatarUrl String?
}